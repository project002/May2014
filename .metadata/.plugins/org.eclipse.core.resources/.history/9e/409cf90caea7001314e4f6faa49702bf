#include "CGUIGTK.h"

CGUIGTK::CGUIGTK() :mActionGroup(Gtk::ActionGroup::create())
{
	set_border_width(10);
	set_default_size(530,320);
	set_title("Bandwidth Variance Emulation");



	add(mActionGroup);
}

